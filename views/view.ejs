<!DOCTYPE html>
<html lang="en">
<!-- Head section remains the same until styles -->
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Notes</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Merriweather:wght@400;700&display=swap" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- AOS Animation Library -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/homestyle.css">
</head>
<body>
    <!-- Navbar remains the same -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light shadow fixed-top">
        <div class="container">
            <a class="navbar-brand" href="#">üìö My Book Library</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="#books">Books</a></li>
                    <li class="nav-item"><a class="nav-link" href="/addbook">Add Book</a></li>
                    <li class="nav-item">
                        <button class="btn btn-sm btn-warning" id="nightLightToggle">üåô Night Light</button>
                    </li>
                </ul>
            </div>
        </div>
    </nav>


    <!-- Header remains the same -->
    <header class="hero-section text-center text-white py-5">
        <div class="container" data-aos="fade-up">
            <h1 class="display-4" style="color: black;">Notes for <%= title %></h1>
            <p class="lead" style="color: #2c2c2c;">Here are the notes I took while reading this book. Hope you find them insightful!</p>
        </div>
    </header>

    <!-- Modified Notes List Section -->
    <main class="container py-5">
        <div class="row g-4">
            <% notes.forEach(note => { %>
            <div class="col-12" data-aos="zoom-in">
                <div class="card shadow-lg h-100">
                    <div class="card-body">
                        <h5 class="card-title text-primary"><%= note.number %></h5>
                        <p class="card-text" id="text-<%= note.id %>"><%= note.text %></p>
                        <div class="card-actions">
                            <a href="/edit/<%= note.id %>/<%= bookid %>" class="btn btn-outline-primary btn-edit">
                                <i class="fas fa-edit"></i> edit
                            </a>
                            <a href="/delete/<%= note.id %>/<%= bookid %>" class="btn btn-outline-danger btn-delete">
                                <i class="fas fa-trash-alt"></i> Delete
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <% }) %>
        </div>
    </main>


    <!-- Footer remains the same -->
    <footer class="bg-dark text-center text-white py-3">
        <p>&copy; <%= new Date().getFullYear() %> My Book Library | Created with ‚ù§Ô∏è</p>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
    <!-- Custom JS -->
    <script>
        // Initialize AOS
        AOS.init();

        // Night Light Toggle
        const nightLightToggle = document.getElementById('nightLightToggle');
        const body = document.body;

        // Check localStorage for night light preference
        if (localStorage.getItem('night-light') === 'enabled') {
            enableNightLight();
        }

        nightLightToggle.addEventListener('click', () => {
            if (localStorage.getItem('night-light') === 'enabled') {
                disableNightLight();
            } else {
                enableNightLight();
            }
        });

        function enableNightLight() {
            body.classList.add('night-light');
            nightLightToggle.innerText = '‚òÄÔ∏è Day Mode';
            localStorage.setItem('night-light', 'enabled');
        }

        function disableNightLight() {
            body.classList.remove('night-light');
            nightLightToggle.innerText = 'üåô Night Light';
            localStorage.setItem('night-light', 'disabled');
        }
    </script>
</body>
</html>
